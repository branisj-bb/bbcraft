---
import '../styles/global.css';
const { title = 'BB Craft' } = Astro.props;
---
<html lang="cs">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen flex flex-col bg-white text-neutral-900">
    <header class="border-b py-4">
      <nav class="max-w-6xl mx-auto flex justify-between px-4">
        <a href="/" class="font-bold text-lg">BB Craft</a>
        <div class="flex gap-4">
          <a href="/produkty" class="hover:underline">Produkty</a>
          <a href="/o-nas" class="hover:underline">O nás</a>
        </div>
      </nav>
    </header>

    <main class="flex-1">
      <slot />
    </main>

    <footer class="border-t text-sm text-center py-6 text-neutral-500">
      © {new Date().getFullYear()} BB Craft
    </footer>
  </body>
</html>