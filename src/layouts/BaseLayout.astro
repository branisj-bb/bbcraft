---
const { title } = Astro.props;
---

<html lang="cs">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title ? `${title} | BB Craft` : "BB Craft"}</title>
  </head>

  <body class="relative text-[#1a1a1a] font-serif flex flex-col items-center min-h-screen overflow-x-hidden">

    <!-- Papírové pozadí -->
<div
  class="absolute inset-0 bg-[url('/images/background-texture.png')] bg-repeat bg-center opacity-90 pointer-events-none"
></div>

<!-- Jemný světlý závoj, aby textura nebyla rušivá -->
<div
  class="absolute inset-0 bg-[#f4efe8]/60 backdrop-blur-[1px] pointer-events-none"
></div>

    <!-- OBSAH STRÁNKY -->
    <div class="relative z-10 flex flex-col items-center w-full">

      <!-- HEADER -->
<header class="relative w-full bg-transparent">
  <div class="max-w-5xl mx-auto mt-4 px-6">
    <div class="flex justify-between items-end">
      <a href="/">
        <img src="/images/logo.png" alt="BB Craft logo" class="h-16 sm:h-20" />
      </a>
      <nav
        style="font-family: 'Courier New', Courier, monospace"
        class="space-x-6 text-xs sm:text-sm tracking-wide uppercase font-medium"
      >
        <a href="/produkty" class="hover:opacity-70 transition-opacity">Produkty</a>
        <a href="/o-nas" class="hover:opacity-70 transition-opacity">O nás</a>
      </nav>
    </div>
    <div class="border-b border-black w-full mt-2"></div>
  </div>
</header>

      <!-- CONTENT -->
<main class="flex-1 w-full max-w-5xl px-6 mt-36">
  <slot />
</main>

      <!-- FOOTER -->
      <footer class="w-full max-w-5xl px-6 pb-10 mt-16">
        <div class="border-t border-black w-full mb-3"></div>
        <div class="text-left text-xs sm:text-sm uppercase tracking-wide space-y-1">
          <p>E-mail</p>
          <p>Instagram</p>
        </div>
      </footer>
    </div>
  </body>
</html>