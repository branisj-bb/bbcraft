---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Domů">
	<section class="text-center mt-12 mb-8">
		<h1
		style="font-family: 'HGGothicE', HGGothicE, monospace; color: #3d3d3d;" 
		class="text-lg tracking-widest uppercase mb-14 font-semibold text-[2rem]">
			Objevte kouzlo ruční práce
		</h1>

		<div class="grid grid-cols-2 sm:grid-cols-4 gap-12 justify-items-center">
			{
				[
					{ src: "/images/kuze.png", alt: "Kůže" },
					{ src: "/images/mech.png", alt: "Mech" },
					{ src: "/images/vune.png", alt: "Vůně" },
					{ src: "/images/vence.png", alt: "Věnce" },
				].map((item) => (
					<a
						href={`/produkty#${item.alt.toLowerCase()}`}
						class="group relative block w-30 h-[40rem] rounded-lg"
					>
						<img
							src={item.src}
							alt={item.alt}
							class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
						/>

<p
style="font-family: 'Courier New', Courier, monospace" 
class="absolute bottom-[5%] left-[-50%] translate-y-1/3 text-black text-[50px] tracking-[0.25em] uppercase">
  {item.alt}
</p>
					</a>
				))
			}
		</div>

	</section>
</BaseLayout>
