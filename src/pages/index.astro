---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Domů">
	<section class="text-center mt-12 mb-8">
		<h1 class="text-lg tracking-widest uppercase mb-14">
			Objevte kouzlo ruční práce
		</h1>

		<div class="grid grid-cols-2 sm:grid-cols-4 gap-6 justify-items-center">
			{
				[
					{ src: "/images/kuze.png", alt: "Kůže" },
					{ src: "/images/mech.png", alt: "Mech" },
					{ src: "/images/vune.png", alt: "Vůně" },
					{ src: "/images/vence.png", alt: "Věnce" },
				].map((item) => (
					<a
						href={`/produkty#${item.alt.toLowerCase()}`}
						class="group relative block w-36 sm:w-40 md:w-44 lg:w-48 h-96 overflow-hidden rounded-2xl"
					>
						<img
							src={item.src}
							alt={item.alt}
							class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
						/>

						<p class="absolute bottom-6 left-[12%] text-black text-[22px] tracking-[0.25em] uppercase font-semibold group-hover:opacity-90 transition-opacity">
							{item.alt}
						</p>
					</a>
				))
			}
		</div>
	</section>
</BaseLayout>
