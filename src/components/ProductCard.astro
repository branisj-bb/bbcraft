---
interface Product {
  // přizpůsob si názvy podle svého JSONu
  title: string;           // např. "OBAL NA BRÝLE"
  price: number | string;  // např. 999
  image: string;           // cesta k obrázku
}

interface Props {
  product: Product;
  index: number;
}

const { product, index } = Astro.props as Props;

// 01, 02, 03…
const indexLabel = String(index + 1).padStart(2, '0');
---

<article class="flex flex-col">
  <!-- Foto přes celou šířku -->
  <div class="relative">
    <img
      src={product.image}
      alt={product.title}
      loading="lazy"
      class="w-full h-auto object-cover"
    />
    <span
      class="absolute bottom-2 left-2 text-black text-3xl md:text-4xl tracking-[0.25em] drop-shadow-lg"
    >
      {indexLabel}
    </span>
  </div>

  <!-- Spodní bílý „proužek“ jako na screenu -->
  <div class="mt-2">
    <!-- první řádek: číslo vlevo, cena vpravo -->
    <div class="flex items-end justify-between">
      <span class="mt-1 text-xs md:text-sm uppercase">
        {product.title}
      </span>
      <span class="text-xs md:text-sm">
        {product.price} Kč
      </span>
    </div>
  </div>
</article>