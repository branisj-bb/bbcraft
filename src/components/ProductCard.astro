---
// původní interface a props
interface Product {
  slug: string;
  title: string;
  price: number | string;
  image: string;
}

interface Props {
  product: Product;
  index: number;
}

const { product, index } = Astro.props as Props;
const indexLabel = String(index + 1).padStart(2, '0');
---

<a href={`/produkty/${product.slug}`} class="block hover:opacity-90 transition-opacity">
  <article class="flex flex-col">
    <div class="relative">
      <img
        src={product.image}
        alt={product.title}
        loading="lazy"
        class="w-full h-auto object-cover"
      />
      <span class="absolute bottom-2 left-2 text-3xl md:text-4xl tracking-[0.25em] drop-shadow-lg">
        {indexLabel}
      </span>
    </div>
  <div class="mt-2">
    <!-- první řádek: číslo vlevo, cena vpravo -->
    <div class="flex items-end justify-between">
      <span class="mt-1 text-xs md:text-sm uppercase">
        {product.title}
      </span>
      <span class="text-xs md:text-sm">
        {product.price} Kč
      </span>
    </div>
  </div>
  </article>
</a>